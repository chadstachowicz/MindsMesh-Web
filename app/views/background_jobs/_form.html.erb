<%= simple_form_for(@background_job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :job_type %>
    <%= f.input :entity_id %>
    <%= f.input :transactions %>
    <%= f.input :campaign_id %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
