<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :entity %><br />
    <%= f.select :entity_id, Entity.all.map { |e| [e.name, e.id] } %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %> can leave blank
  </div>
  <div class="field">
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>  can leave blank
  </div>
  <div class="field">
    <%= f.label :self_joining %><br />
    <%= f.check_box :self_joining %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
