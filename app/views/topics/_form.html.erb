<%= form_for(@topic, html: {class: 'form-horizontal'}) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :entity_user, nil, class: 'control-label' %>
    <div class="controls">
    <% if @topic.new_record? %>
      <%= f.select :entity_user_id, current_user.entity_users.map { |eu| [eu.entity.name, eu.id] } %>
      <% else %>
        <%= content_tag :strong, @topic.entity.name, class: 'control-label', style: 'text-align:left' %>
      <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :title, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :number, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :number %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
      <span class="label label-info">can leave blank</span>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :slug, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :slug %>
      <span class="label label-info">can leave blank</span>
    </div>
  </div>
  
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= f.check_box :privacy %> Privacy
      </label>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>


