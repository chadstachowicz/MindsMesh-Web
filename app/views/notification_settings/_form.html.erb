<%= simple_form_for(@notification_setting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :topic_push_setting_id %>
    <%= f.input :topic_email_setting_id %>
    <%= f.input :group_push_setting_id %>
    <%= f.input :group_email_setting_id %>
    <%= f.input :reply_push_setting_id %>
    <%= f.input :reply_email_setting_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
