<% if @school_user_request.errors.any? %>
  alert("<%= j @school_user_request.errors.full_messages.join(',') %>");
<% else %>
  alert("please, check your email box for a confirmation link");
  $("body").append("<%= j link_to 'email link', home_user_school_path(@school_user_request.confirmation_token) %>");
<% end %>