<div id="main_index">
    <div id="features">
    	<div id="featurediv">
    		<div class="container fix-sections">
    			<h2>You are about to join <%= @entity.entity_users_count %> others from <%= @entity.name %> </h2>
    				<div style="width:100%;text-align:center">
    					<% if @eu.nil? %>
   						 <% else %>
     						 <% @eu.each do |fb_friend| %>
        						<%= image_tag fb_friend.user.photo_url, width: 50 %>
        
      						<% end %>
    					<% end %>
     			    </div>
    
    			<h3>Tell us a bit about yourself to finish registration below</h3>

    			<div class="row">
				<div class="span3"></div>
				<div class="span3">
					<div style="width:100%;text-align:center;padding-top:60px">
		     			<%= link_to image_tag('connect-facebook-button.png'), user_omniauth_authorize_path(:edu_facebook, confirmation_token: params[:confirmation_token]), id: 'login_facebook' %>
						<br/>
					</div>
				</div>
 		   		<div class="span1"><h2 style="width:100%;text-align:center;padding-top:70px">or</h2></div>
 		    	<div id="dev_signup" class="span2">
					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)), remote: true  do |f| %>
  					<%= devise_error_messages! %>
  					<%= hidden_field_tag 'entity_token', params[:token] %>
					<div><%= f.label :name %>
  						<%= f.text_field :name, :autofocus => true %></div>
  				
  					<div><%= f.label :email %>
  						<%= f.email_field :email %></div>

  					<div><%= f.label :password %>
  						<%= f.password_field :password %></div>

  					<div><%= f.label :password_confirmation %>
  						<%= f.password_field :password_confirmation %></div>

  					<div><%= f.submit "Finish Registration", :id => 'sign-up' %></div>
				<% end %>
           		</div>
 
			</div>
		</div>
	</div>
</div>
</div>