<% if my_fb_friends_i_should_invite.any? %>

if ($('#sidebar_right').length) {
  var s = "<%= j render '/partials/application/fb_invites_rightbar' %>";
  $('#sidebar_right').append(s);
}


var s = "<%= j render '/partials/application/fb_invites' %>";
$('body').append(s);



if ($.cookie('suggest_follows') == true && $('#follow_recs_modal').length) {
  var _callback = function() {
    $('#follow_recs_modal').modal();
    $.cookie('suggest_follows', 'false');
  }
  setTimeout(_callback, 1000);
} else if ($.cookie('suggest_invites') == true && !$.cookie('suggest_follows') && $('#fb_friends_modal').length) {
  var _callback = function() {
    $('#fb_friends_modal').modal();
    $.cookie('suggest_invites', 'false');
  }
  setTimeout(_callback, 1000);
}

<% end %>