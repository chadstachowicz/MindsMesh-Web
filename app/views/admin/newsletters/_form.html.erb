        {title: 'Test template 1', content: 'Test 1'},
        {title: 'Test template 2', content: 'Test 2'}
    ]
});
</script>

<%= simple_form_for(@admin_newsletter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= label_tag(:title, "Email subject") %>
    <%= f.text_field :title, :class => "tinymce" %>
    <%
      options =  {:label => false}

      options[:input_html] = { :value => "<h3>First Subject</h3><p>This is the email initial value.</p>" } if current_page?(:action => 'new')
      
    %>
    <%= f.input :htmlemail, options %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


