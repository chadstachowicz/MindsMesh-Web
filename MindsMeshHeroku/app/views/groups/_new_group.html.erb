<% if current_user.entity_users.any? %>
<% @group = Group.new %>
<%= form_for(@group, html: {class: 'form-horizontal'}, format: :json) do |f| %>
  <div class="modal hide" id="new_group_modal">
    <div class="modal-header">
      <h3>Create a new Group</h3>
    </div>
    <div class="modal-body">

      <div class="control-group">
        <%= f.label :entity_user, 'School', class: 'control-label' %>
        <div class="controls">
          <%= f.select :entity_user_id, current_user.entity_users.map { |eu| [eu.entity.name, eu.id] } %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :name, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, placeholder: "Alpha Kappa Phi" %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :privacy, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.check_box :privacy %>
          <span class="help-inline"></span>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal">Cancel</a>
      <%= f.submit 'Create Group', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
<% end %>